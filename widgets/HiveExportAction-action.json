{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "General",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "File Path",
          "name": "path"
        },
        {
          "widget-type": "textbox",
          "label": "Delimiter for the input file",
          "name": "delimiter",
          "widget-attributes": {
            "default": ","
          }
        },
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "user"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        },
        {
          "widget-type": "textbox",
          "label": "Connection String",
          "name": "connectionString",
          "widget-attributes": {
            "placeholder": "jdbc:hive2://localhost:10010/mydb"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Export Statement",
          "name": "statement",
          "widget-attributes": {
            "placeholder": "select * from tablemName"
          }
        }
      ]
    }
  ]
}
