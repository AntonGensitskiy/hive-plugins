{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "General",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "HDFS export directory path",
          "name": "path",
          "widget-attributes": {
            "placeholder": "/path/to/export/directory"
          }
        },
        {
          "widget-type": "select",
          "label": "Overwrite directory?",
          "name": "overwrite",
          "widget-attributes": {
            "values": [
              "yes",
              "no"
            ],
            "default": "yes"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Column delimiter",
          "name": "delimiter",
          "widget-attributes": {
            "default": ","
          }
        },
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "user"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        },
        {
          "widget-type": "textbox",
          "label": "Connection String",
          "name": "connectionString",
          "widget-attributes": {
            "placeholder": "jdbc:hive2://localhost:10000/mydb;auth=delegationToken"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Select query",
          "name": "statement",
          "widget-attributes": {
            "placeholder": "SELECT * FROM employee e JOIN salary s ON (e.id = s.id)"
          }
        }
      ]
    }
  ]
}
